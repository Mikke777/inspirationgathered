<div class="container my-2 p-2" style="background-color: #2836a5; border-radius: 5rem;">
  <div class="row p-3">
    <div class="col-md-10 mx-auto p-5" style="background-color: white; border-radius: 5rem;">
      <div class="chat">
        <h1>Chat with <%= @other_user.name %> about <%= @booking.workshop.title %></h1>
        <%= turbo_stream_from "booking_#{@booking.id}_messages" %>
        <div id="messages" class="messages">
          <% @messages.each do |message| %>
            <%= render "messages/message", message: message, user: current_user %>
          <% end %>
        </div>

        <div id="new_message" style="border: none;">
          <%= render "messages/form_m", booking: @booking, message: Message.new %>
        </div>
      </div>
    </div>
  </div>
</div>
