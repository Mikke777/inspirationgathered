<div class="container-fluid pt-3" data-controller="toggle">
  <div class="row">
    <div class="col-12">
      <div class="d-flex flex-column flex-md-row w-100 top-rounded-container" style="padding: 1rem; border-top-left-radius: 15px; border-top-right-radius: 15px;">
        <div class="profile-picture mx-auto mx-md-0">
          <%= image_tag @user.photo, style: "height: 15rem; width: 15rem; object-fit: cover;" %>
        </div>
        <div class="user-details align-self-center text-md-start ms-md-3 mt-3 mt-md-0">
          <h3><%= @user.name %> <%= @user.last_name %></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="bg-light py-3 px-5 bottom-rounded-container" style="border-bottom-left-radius: 15px; border-bottom-right-radius: 15px;">
    <div class="row pt-3">
      <div class="col-12">
        <div class="d-flex justify-content-center">
          <a href="#myStory" class="me-3 text-black active-link" style="font-family: Lovelo;" data-action="click->toggle#changeTitle" data-title="My Story" data-toggle-target="storyLink">
            About Me
          </a>
          <a href="#myWorkshops" class="me-3 text-black" style="font-family: Lovelo;" data-action="click->toggle#changeTitle" data-title="My Workshops" data-toggle-target="workshopsLink">
            My Workshops
          </a>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-md-3 p-5">
        <h3 data-toggle-target="title">About me</h3>
      </div>
      <div class="col-md-9">
        <div class="collapse show" id="myStory" data-toggle-target="story">
          <div>
            <%= @user.description %>
          </div>
        </div>
        <div class="collapse" id="myWorkshops" data-toggle-target="workshops">
          <div>
            <ul class="list-unstyled">
              <% @user.workshops.each do |workshop| %>
                <li>
                  <%= link_to workshop.title, workshop_path(workshop), class: "workshop-link-profile", style:"font-family: Lovelo;" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <% if current_user == @user %>
      <div class="d-flex justify-content-end mt-3">
        <%= link_to "Edit", edit_user_registration_path, class: "btn align-self-end px-5 mx-5", style:"border-radius: 0px; color: white; background-color: #ff7c00; border: none;" %>
      </div>
    <% end %>
  </div>
</div>
