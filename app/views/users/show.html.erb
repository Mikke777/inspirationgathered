<h1>User Profile</h1>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @user.description %>
</p>

<p>
  <strong>Photo:</strong>
  <% if @user.photo.attached? %>
    <%= image_tag @user.photo, width: 400, height: 300, crop: :fill %>
  <% else %>
    No photo uploaded
  <% end %>
</p>
