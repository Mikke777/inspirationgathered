<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5">
      <h1>Profile of <%= @user.name %></h1>
      <div class="d-flex justify-content-center mx-auto mb-3">
        <% if @user.photo.attached? %>
          <%= image_tag @user.photo, class:"img-fluid" %>
        <% else %>
          <%= image_tag "noimageuser.jpg", class:"img-fluid" %>
        <% end %>
      </div>
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>

      <p>
        <strong>Last Name:</strong>
        <%= @user.last_name %>
      </p>

      <p>
        <strong>Little bit about me:</strong>
        <%= @user.description %>
      </p>
      <div>
        <h2>My available workshop</h2>
        <ul class="list-unstyled">
          <% @user.workshops.each do |workshop| %>
            <li>
              <%= link_to workshop.title, workshop_path(workshop), class: "workshop-link-profile" %>
            </li>
          <% end %>
        </ul>
        <% if @user == current_user %>
          <%= link_to "Edit my profile", edit_user_registration_path, class: "btn btn-warning" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
