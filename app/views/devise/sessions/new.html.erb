<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto my-5" style="background-color: #2836a5; padding: 20px;">
      <h2 style="color: white;">Get Inspired!</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "marie.curie@gmail.com",
                      label_html: { style: "color: white;" },
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: "••••••",
                      label_html: { style: "color: white;" },
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label_html: { style: "color: white;" } if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary", style:"font-family: Lovelo; background-color: #ff7c00; border: none;" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
