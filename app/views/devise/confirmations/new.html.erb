<div class="container my-5">
  <div class="row">
    <div class="col-md-6 mx-auto my-5" style="background-color: #2836a5; padding: 30px; color: white;">
      <h2>Resend confirmation instructions</h2>
        <%= simple_form_for(resource, as: resource_name, url: send("#{resource_name}_confirmation_path"), html: { method: :post }) do |f| %>  <%= f.error_notification %>
          <%= f.full_error :confirmation_token %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                        input_html: { autocomplete: "email" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Resend confirmation instructions", style: "background-color: #d70c99; color: white; border-radius: 0px; margin-top: 15px;" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
