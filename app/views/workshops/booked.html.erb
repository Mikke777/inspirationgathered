<div class="container my-5">
  <h1 class="mb-4">My Booked Workshops</h1>

  <% if @booked_workshops.empty? %>
    <p>You have not booked any workshops.</p>
  <% else %>
    <div class="row">
      <% @booked_workshops.each do |workshop| %>
        <div class="col-md-6 mb-4">
          <div class="card h-100 d-flex flex-column">
            <% if workshop.photo.attached? %>
              <%= cl_image_tag workshop.photo.key, class: "card-img-top img-fluid", style: "height: 200px; object-fit: cover;" %>
            <% else %>
              <p>No photo available</p>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h2 class="card-title"><%= link_to workshop.title, workshop_path(workshop) %></h2>
              <p class="card-text"><strong>Date:</strong> <%= workshop.date.strftime("%B %d, %Y %H:%M") %></p>
              <p class="card-text"><%= workshop.description %></p>
              <div class="mt-auto d-flex justify-content-between">
                <%= button_to 'Cancel Booking', workshop_booking_path(workshop, workshop.bookings.find_by(user: current_user)), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                <%= link_to 'Chat with Host', chat_workshop_booking_path(workshop, workshop.bookings.find_by(user: current_user)), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
