<div class="container-fluid mx-0">
  <div class="row">
    <div class="col-6 d-flex justify-content-center align-items-center" style="background-color: #2836a5; height: 25rem;">
      <h1 style="font-family: 'Lovelo', sans-serif; width: 20rem; font-weight: bold; text-align: center; color: white">GET INSPIRED NOW!</h1>
    </div>
    <div class="col-6 d-flex justify-content-center align-items-center" style="background-color: #ff7c00;">
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <% if user_signed_in? %>
      <div class="col-sm-8 my-3">
        <%= form_with url: workshops_path, method: :get, class: "d-flex w-100", data: { turbo_frame: "workshops" } do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control me-2",
                placeholder: "Type a City, User, or Workshop Title"
            %>
          <%= button_tag(type: 'submit', class: 'btn btn-primary', style: "background-color:#d70c99; border: none;") do %>
            <i class="fa-solid fa-magnifying-glass"></i>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <% if user_signed_in? %>
    <%= turbo_frame_tag :workshops do %>
      <%= render "workshops/workshops_list", workshops: @workshops %>
    <% end %>
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col-12 my-5">
          <h1 class="fw-bold" style="font-family: 'Lovelo', sans-serif;">People + Places</h1>
          <div class="d-none d-lg-flex flex-wrap justify-content-center">
            <%= image_tag "inga1.jpg", alt: "woman image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
            <%= image_tag "inga2.jpg", alt: "woman image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: 25%;", loading: "lazy" %>
            <%= image_tag "inga3.jpg", alt: "woman image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: 45%;", loading: "lazy" %>
            <%= image_tag "inga4.jpg", alt: "woman image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
          </div>
          <div class="d-flex d-lg-none flex-wrap justify-content-center">
            <%= image_tag "inga1.jpg", alt: "woman image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "inga2.jpg", alt: "woman image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "inga3.jpg", alt: "woman image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "inga4.jpg", alt: "woman image", class: "img-fluid m-2", loading: "lazy" %>
          </div>
        </div>
        <div class="col-12 my-5">
          <h1 class="fw-bold" style="font-family: 'Lovelo', sans-serif;">Places + Workshops</h1>
          <div class="d-none d-lg-flex flex-wrap justify-content-center">
            <%= image_tag "place1.jpg", alt: "place image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
            <%= image_tag "place2.jpg", alt: "place image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
            <%= image_tag "place3.jpg", alt: "place image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
            <%= image_tag "place4.jpg", alt: "place image", class: "img-fluid m-2", style: "width: 13.9vw; height: 35vh; object-fit: cover; object-position: center;", loading: "lazy" %>
          </div>
          <div class="d-flex d-lg-none flex-wrap justify-content-center">
            <%= image_tag "place1.jpg", alt: "place image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "place2.jpg", alt: "place image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "place3.jpg", alt: "place image", class: "img-fluid m-2", loading: "lazy" %>
            <%= image_tag "place4.jpg", alt: "place image", class: "img-fluid m-2", loading: "lazy" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
